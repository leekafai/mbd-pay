{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "watch": true,
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": false,
    "esModuleInterop": true
  },
  "include": [
    "./src",
  ],
  "exclude": [
    "./dist"
  ]
}